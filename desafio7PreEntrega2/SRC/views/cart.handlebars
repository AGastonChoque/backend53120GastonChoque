<div class="container">
    <h4 class="container d-flex justify-content-around mt-5">Carrito</h4>
    <div class="container mt-5 mb-2">
        <div class="row justify-content-between">
            <h4>Sus productos</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr key={prod.id}>
                        <th scope="row"></th>
                        <td>
                            <a href="http://localhost:8080/products/{{this.product._id}}">
                                <img src="{{this.product.thumbnail}}" alt="{{this.product.title}}" width="50" />
                            </a>
                        </td>
                        <td>{{this.product.title}}</td>
                        <td>{{this.quantity}}</td>
                        <td>${{this.product.price}}</td>
                        <td>${{this.product.price}}</td>
                        <td><button type="button" class="btn-close" aria-label="Close"></button></td>
                    </tr>
                    {{/each}}
                </tbody>
                <tbody>
                    <tr>
                        <th>Total de la compra</th>
                        <th>$</th>
                    </tr>
                </tbody>
            </table>
            <div class="container d-flex justify-content-around mb-5">
                <button type="button" class="btn btn-outline-danger" onClick={vaciarCarrito}>Vaciar Carrito</button>
                <button class="btn btn-outline-success" to="/checkout">Finalizar Compra!</button>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-around mb-5"></div>
</div>